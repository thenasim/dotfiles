" Syntax ON
:syntax on

" Relative Line Number
set nu

" No Backup File (~ file) / Swap file
set nobackup
set nowritebackup
set noswapfile
set noundofile

" On pressing tab, insert 2 spaces
set expandtab
" show existing tab with 2 spaces width
set tabstop=2
set softtabstop=2
" when indenting with '>', use 2 spaces width
set shiftwidth=2

" Backspace
set backspace=indent,eol,start
